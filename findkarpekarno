#include <stdio.h>
#include <stdbool.h>
#include <math.h>
bool kaprekar(int n)
{
 if (n == 1)
 return true;
 int sqr_n = n * n;
 int ctr_digits = 0;
 while (sqr_n)
 {
 ctr_digits++;
 sqr_n /= 10;
 }
 sqr_n = n*n;
 for (int r_digits=1; r_digits<ctr_digits; r_digits++)
 {
 int eq_parts = pow(10, r_digits);
 if (eq_parts == n)
 continue;
 int sum = sqr_n/eq_parts + sqr_n % eq_parts;
 if (sum == n)
 return true;
 }
 return false;
}
int main()
{
int k;
 printf("\n\n Check whether a given number is a Kaprekar number: \n");
 printf(" -------------------------------------------------------\n");
 printf(" Input a number: ");
 scanf("%d",&k);
 if (kaprekar(k)==true)
 {
 printf("%d is a Kaprekar number. \n",k);
 }
 else
 {
 printf("%d is not a Kaprekar number. \n",k);
 }
}
